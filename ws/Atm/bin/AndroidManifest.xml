<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tom.atm"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tom.atm.LoginActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.tom.atm.FuncActivity"
            android:label="@string/title_activity_func" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tom.atm.BalanceActivity"
            android:label="@string/title_activity_balance" >
        </activity>
        <activity
            android:name="com.tom.atm.HistoryActivity"
            android:label="@string/title_activity_history" >
        </activity>
        <activity
            android:name="com.tom.atm.GoogleActivity"
            android:label="@string/title_activity_google" >
        </activity>
        <activity
            android:name="com.tom.atm.WeatherActivity"
            android:label="@string/title_activity_weather" >
        </activity>
    </application>

</manifest>
